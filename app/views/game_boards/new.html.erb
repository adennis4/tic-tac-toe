<h1>Chicago Bears - Tic Tac Toe</h1>
<table cellpadding="0" cellspacing="0">
	
	<tr id="row1">
		<td id="cell0"></td>			
		<td id="cell1"></td>		
		<td id="cell2"></td>
	</tr>
	
	<tr id="row2">
		<td id="cell3"></td>	
		<td id="cell4"></td>	
		<td id="cell5"></td>
	</tr>
	
	<tr id="row3">
		<td id="cell6"></td>		
		<td id="cell7"></td>		
		<td id="cell8"></td>
	</tr>
</table>

<%= form_for Player.new do |f| %>
	<%= f.label :mark, "Type X or O" %>
	<%= f.text_field :mark %>
	<%= f.hidden_field :game_board_id, :value => @game.id %>
	<%= f.submit "Start Game" %>
<% end %>