
<head>
	<title>Chicago Bears - Tic Tac Toe</title>
</head>

<h1>Chicago Bears - Tic Tac Toe</h1>

<div class="tictactoe">
	<table cellpadding="0" cellspacing="0">

		<tr>
			<% @n = 0  %>
			<% while @n < 3 %>
				<%= render :partial => 'shared/board' %>
				<% @n += 1 %>
			<% end %>
		</tr>
	
		<tr>
			<% while @n < 6 %>
				<%= render :partial => 'shared/board' %>
				<% @n += 1 %>
			<% end %>
		</tr>
	
		<tr>
			<% while @n < 9 %>
				<%= render :partial => 'shared/board' %>
				<% @n += 1 %>
			<% end %>
		</tr>
	</table>
</div>

<div class="selector">
	<%= form_for @game do |f| %>
		<p><strong><%= f.label :selection, "Choose a Number to Place your Mark" %></strong></p>
		<%= f.text_field :selection %>
		<%= f.submit "Select Square" %>
	<% end %>
</div>

<p id="restart"><%= link_to "Restart Game", root_path %></p>